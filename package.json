{
  "name": "customtabs",
  "type": "module",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "vite",
    "preview": "vite preview",
    "load-icons": "cp -r ./src/assets dist/icons",
    "dev:firefox": "npm run build && npm run load-icons && web-ext run --source-dir=./dist --firefox='/Applications/Firefox Developer Edition.app/Contents/MacOS/firefox'",
    "prod:firefox": "npm run build && web-ext build --source-dir=./dist --overwrite-dest",
    "build:docker": "npm run build && npm run load-icons",
    "build": "tsc && vite build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "dependencies": {
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.2.0",
    "@eslint-react/eslint-plugin": "^2.3.5",
    "@tailwindcss/vite": "^4.1.14",
    "@types/node": "^24.8.1",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.1",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "@vitejs/plugin-react": "^5.0.4",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.39.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.14",
    "typescript": "~5.9.3",
    "vite": "^7.1.7",
    "vite-plugin-svgr": "^4.5.0"
  }
}
